<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Connexion</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="mb-4 text-center">Connexion</h2>

                    {% if error %}
                        <div class="alert alert-danger" role="alert">
                            {{ error }}
                        </div>
                    {% endif %}

                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_label(form.identifier, 'Nom d\'utilisateur ou E-mail', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.identifier, {'attr': {'class': 'form-control', 'placeholder': 'Entrez votre nom d\'utilisateur ou e-mail'}}) }}
                            {{ form_errors(form.identifier) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.password, 'Mot de passe', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.password, {'attr': {'class': 'form-control', 'placeholder': 'Entrez votre mot de passe'}}) }}
                            {{ form_errors(form.password) }}
                        </div>

                        <div class="d-grid">
                            {{ form_widget(form.login, {'attr': {'class': 'btn btn-primary'}}) }}
                        </div>
                    {{ form_end(form) }}

                    <p class="mt-3 text-center">
                        Pas encore inscrit ? <a href="{{ path('home_index') }}">Cr√©er un compte</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>


</body>
</html>
