{% extends 'base.html.twig' %}

{% block title %}Profil de {{ user.username }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h1 class="mb-4 text-center">Profil de {{ user.username }}</h1>

                    <div>
                        <p><strong>Nom d'utilisateur :</strong> {{ user.username }}</p>
                        <p><strong>Email :</strong> {{ user.email }}</p>

                        {% if user.profilePicture %}
                            <p><strong>Photo de profil :</strong></p>
                            <img src="{{ asset('uploads/' ~ user.profilePicture) }}" alt="Photo de profil" class="img-fluid" style="max-width: 150px;">
                        {% else %}
                            <p>Aucune photo de profil disponible.</p>
                        {% endif %}

                        <p><strong>Date de création :</strong> {{ user.createdAt|date('d/m/Y H:i') }}</p>

                        <a href="{{ path('home_index') }}" class="btn btn-primary">Retour à l'accueil</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
