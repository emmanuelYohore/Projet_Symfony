{% extends 'base.html.twig' %}

{% block title %}Profile of {{ user.username }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h1 class="mb-4 text-center">Profile of {{ user.username }}</h1>

                    <div class="row">
                        <div class="col-md-4 text-center">
                            {% if user.profilePicture %}
                                <p><strong>Profile Picture:</strong></p>
                                <img src="{{ asset('uploads/' ~ user.profilePicture) }}" alt="Profile Picture" class="img-fluid" style="max-width: 150px;">
                            {% else %}
                                <p>No profile picture available.</p>
                            {% endif %}
                        </div>
                        <div class="col-md-8">
                            <p><strong>Username:</strong> {{ user.username }}</p>
                            <p><strong>Email:</strong> {{ user.email }}</p>
                            <p><strong>Creation Date:</strong> {{ user.createdAt|date('d/m/Y H:i') }}</p>
                            <p class="mb-1"><strong>Change Profile Picture</strong></p>
                            {{ form_start(changeProfilePictureForm) }}
                                <div class="d-flex flex-column gap-2" style="max-width: 200px;">
                                    {{ form_row(changeProfilePictureForm.profilePicture, {'attr': {'class': 'form-control form-control-sm'}}) }}
                                    <button type="submit" class="btn btn-success btn-sm w-100">Change Picture</button>
                                </div>
                            {{ form_end(changeProfilePictureForm) }}
                        </div>
                    </div>

                    <div class="row mt-4 d-flex justify-content-between align-items-center">
                        <div class="col-auto ms-auto">
                            <a href="{{ path('home_index') }}" class="btn btn-primary btn-sm">Back to Home</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
